<div class="container mt-5">
    <h1 class="text-center mb-4">検索結果</h1>
    <% if @total_count.zero? %>
        <div class="alert alert-info text-center" role="alert">
        近くにレストランはありません。
        </div>
        <div class="text-center">
            <%= link_to "戻る", restaurants_search_path, class: "btn btn-secondary mt-3" %>
        </div>
    <% else %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% @restaurants.each do |restaurant| %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <%= image_tag restaurant['logo_image'], alt: restaurant['name'], class: "card-img-top", style: "height: 150px; width: 100%; object-fit: contain;" %>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to restaurant['name'], restaurant_path(restaurant['id']), class: "text-decoration-none" %></h5>
                            <p class="card-text">営業時間: <%= restaurant['open'] %></p><br>
                            <p class="card-text">場所: <%= restaurant['address'] %></p><br>
                            <p class="card-text">定休日: <%= restaurant['close'] %></p><br>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <%= paginate @restaurants, previous_label: '', next_label: '', window: 2 %>
            </nav>
        </div>
        <div class="text-center">
            <%= link_to "戻る", restaurants_search_path, class: "btn btn-secondary mt-3" %>
        </div>
    <% end %>
</div>